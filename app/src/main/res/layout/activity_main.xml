<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="About ALC"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/aboutALC" android:layout_marginTop="164dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="My Profile"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/profile" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutALC" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.186"/>
</android.support.constraint.ConstraintLayout>